<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.Controller_fx">

    <HBox fx:id="AuthPanel">
        <TextField HBox.hgrow="ALWAYS" promptText="Login" fx:id="LoginField"/>
        <PasswordField HBox.hgrow="ALWAYS" promptText="Password" fx:id="PasswordField"/>
        <Button text="Check" onAction="#tryToAuth"/>
    </HBox>

    <TextArea fx:id="chatArea" editable="false" VBox.vgrow="ALWAYS"/>

    <HBox fx:id="EnterMessenge">
        <TextField HBox.hgrow="ALWAYS" promptText="Enter your messenge" onAction="#SendMsg" fx:id="msgField"/>
        <Button text="Press Enter" onAction="#SendMsg"/>
    </HBox>

</VBox>


<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.text.Text?>
<VBox alignment="center" xmlns:fx="http://javafx.com/fxml" fx:controller="client.Controller" >

    <HBox fx:id="upperPanel">
        <TextField HBox.hgrow="ALWAYS" promptText="Логин" fx:id="loginField"/>
        <PasswordField promptText="Пароль" onAction="#tryToAuth" fx:id="passwordField"/>
        <Button text="Авторизоваться" onAction="#tryToAuth"/>
    </HBox>

    <HBox alignment="center" fx:id="transformPanelButton" visible="false">
        <Button text="Нажмите если желаете изменить ник" onAction="#changePasswordAndLogin"/>
    </HBox>


    <HBox alignment="CENTER" fx:id="yourLogin" visible="false">
        <Text text="Введите логин   " HBox.hgrow="ALWAYS" />
        <TextField HBox.hgrow="ALWAYS"  maxWidth="-Infinity" promptText="Логин" fx:id="takeLogin"/>
    </HBox>

    <HBox alignment="CENTER" fx:id="changeNik" visible="false">
        <Text text="Введите новый ник "/>
        <TextField HBox.hgrow="ALWAYS" maxWidth="-Infinity" promptText="новый ник" fx:id="newNik"/>
    </HBox>

    <Text text="После нажатия на кнопку (Сохранить) ваш логин и пароль будет изменен" fx:id="textSafeOrCancel" visible="false"/>

    <HBox alignment="CENTER" fx:id="safePassAndLoginOrCancel" visible="false">
        <Button text="Сохранить" onAction="#safe"/>
        <Button text="Отменить" onAction="#cancel"/>
    </HBox>


    <TextArea fx:id="chatArea" editable="false" VBox.vgrow="ALWAYS"/>

    <HBox fx:id="bottomPanel" managed="false" visible="false">
        <TextField fx:id="msgField" onAction="#sendMsg" promptText="Введите сообщение..."
                   HBox.hgrow="ALWAYS"/>
        <Button text="Отправить" onAction="#sendMsg"/>
    </HBox>

</VBox>
